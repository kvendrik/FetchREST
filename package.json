{
  "name": "fetch-restful",
  "version": "1.0.4",
  "description": "A wrapper around fetch for REST API dependent projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/kvendrik/fetch-restful.git"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:tslint && yarn lint:eslint",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint src --ext .ts",
    "lint:tslint": "tslint -c tslint.json --project tsconfig.json 'src/**/*.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "ci": "yarn lint && yarn test:coveralls",
    "build": "tsc",
    "prepublish": "rm -rf build && yarn build"
  },
  "author": "Koen Vendrik <k.vendrik@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/fetch-mock": "^6.0.1",
    "@types/jest": "^22.2.1",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-typescript": "^0.12.0",
    "fetch-mock": "^6.3.0",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "dependencies": {
    "whatwg-fetch": "^2.0.4"
  }
}
